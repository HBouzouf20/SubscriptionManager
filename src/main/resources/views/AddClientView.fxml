<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.hbdev.controllers.AddClientController">


    <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Birthdate (YYYY-MM-DD):" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="birthDateField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="CIN:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="cinField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <TextField fx:id="genderField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <HBox spacing="10" style="-fx-alignment: center_right;" GridPane.columnIndex="1" GridPane.rowIndex="7">
        <children>
            <Button onAction="#handleSave" text="Save" />
            <Button onAction="#handleCancel" text="Cancel" />
        </children>
    </HBox>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints maxHeight="26.0" minHeight="26.0" prefHeight="26.0" />
      <RowConstraints maxHeight="26.0" minHeight="26.0" prefHeight="26.0" />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
